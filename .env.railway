# Railway Environment Variables
RAILWAY_ENVIRONMENT=production
NODE_ENV=production
PORT=3000

# FatSecret API Configuration (set these in Railway dashboard)
CLIENT_ID=your_fatsecret_client_id_here
CLIENT_SECRET=your_fatsecret_client_secret_here

# Security (recommended for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
MCP_AUTH_TOKEN=your_secure_auth_token_here

# Optional: Override config file path for Railway
CONFIG_PATH=/tmp/fatsecret-nutrition-config.json
